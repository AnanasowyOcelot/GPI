{% macro menu_categories(categories, slug) %}
    {% for category in categories %}
        <li>
            {% if category.slug != slug %}
            <a href="{{ path('gpi_offer_offers_by_cetegory', {'categorySlug': category.slug}) }}">{{ category.name }}</a>
            {% else %}
               <strong> <a href="{{ path('gpi_offer_offers_by_cetegory', {'categorySlug': category.slug}) }}">{{ category.name }}</a></strong>

            {% endif %}
            {% if category.children %}
                <ul>
                    {{ _self.menu_categories(category.children, slug) }}
                </ul>
            {% endif %}
        </li>
    {% endfor %}
{% endmacro %}

{% block block %}
    <div class="headline"><h2>{{ settings.title }}</h2></div>

    <ul class="main-menu">
        {{ _self.menu_categories(categories, slug) }}
    </ul>
{% endblock %}
